

function clicked( e )
{        
	
	if (isNaN(parseInt(document.getElementsByName("znesek")[0].value)))
	{
		document.getElementById("warningZn").innerHTML = "Napaƒçen zapis zneska";
		e.preventDefault();
	}
	else
	{

		document.getElementById("warningZn").innerHTML = "&nbsp";
	}
  
} 



function start (e)
{
	document.getElementById( "vnosB" ).addEventListener("click", clicked, false );
	document.getElementsByName("znesek")[0].addEventListener("onchange", clicked, false );
}

window.addEventListener("load", start, false);


